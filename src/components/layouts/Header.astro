---
import slateConfig from '~@/slate.config';

interface Props {
  avatar?: string;
}

const { avatar = slateConfig.avatar } = Astro.props;
---

<header>
  <div class="mb-9 h-14 w-14 whitespace-nowrap text-[0px]">
    <img
      class="block h-full w-full rounded-full border-2 border-[var(--color-H-blue-500)] bg-[var(--color-H-blue-100)] outline-1 outline-[var(--color-H-blue-300)]"
      src={avatar}
      alt={slateConfig.title}
      draggable="false"
    />
    <span>{slateConfig.title}</span>
  </div>
</header>
